@model BasicExample.Models.CustomerOrdersVievModel

@{
    ViewBag.Title = "Customer Orders";
}

<h1>Welcome</h1>

<div>
    <h2>Customer Info: </h2>
    <span><strong>Customer ID:</strong> @Model.Customer.Id</span>
    <span><strong>Customer Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName</span>
    <span><strong>Customer Email:</strong> @Model.Customer.Email</span>
</div>

<div>
    <h2>Orders: </h2>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductName</td>
                    <td>@order.Price</td>
                    <td>@order.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>